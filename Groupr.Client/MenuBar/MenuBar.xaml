<UserControl x:Class="Groupr.Client.MenuBar.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupr.Client.MenuBar"
             xmlns:window="clr-namespace:Groupr.Client.Window"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance window:MainViewModel}"
             d:DesignHeight="50" d:DesignWidth="800">
    <Menu >
        <MenuItem Header="Help" Command="{Binding OpenHelpCommand}"/>
    </Menu>
</UserControl>
